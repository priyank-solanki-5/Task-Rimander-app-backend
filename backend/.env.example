# ⚠️ IMPORTANT: Do NOT commit this file to GitHub
# Copy this file to .env and fill in your actual values
# Never share .env file with anyone

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Option 1: PostgreSQL (For Render deployment)
DATABASE_URL=postgres://user:password@localhost:5432/task_management_db

# Option 2: MariaDB (For local development or PlanetScale)
# Uncomment these if using MariaDB
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=your-password
# DB_NAME=task_management_db

# ============================================
# SERVER CONFIGURATION
# ============================================

PORT=3000
NODE_ENV=development

# ============================================
# JWT CONFIGURATION
# ============================================

# Generate a random secret key using:
# openssl rand -base64 32
# Minimum 32 characters recommended
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================

# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760

# Upload directory
UPLOAD_DIR=uploads

# ============================================
# LOGGING CONFIGURATION (optional)
# ============================================

DEBUG=false
LOG_LEVEL=info

# ============================================
# CORS CONFIGURATION (optional)
# ============================================

ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# ============================================
# EMAIL CONFIGURATION (for future use)
# ============================================

# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# ============================================
# RENDER-SPECIFIC CONFIGURATION
# ============================================

